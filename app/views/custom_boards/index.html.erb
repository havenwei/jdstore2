<div class="col-md-12">
    <h2> 定制面板 <span><%=link_to("重置方案", clean_custom_boards_path, method: :delete,
                                class: "btn btn-default pull-right ",
                                data: {confirm: "你确定要重置窗帘方案吗？"}) %></span></h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>商品资讯</th>
          <th>单价</th>
          <th>尺寸</th>
          <th>小计</th>
          <th>操作选项</th>
        </tr>
      </thead>
      <tbody>

        <% current_custom.custom_items.each do |custom_item| %>
          <tr>
            <td>
              <%= link_to fitting_path(custom_item.fitting) do %>
                <% if custom_item.fitting.image.present? %>
                  <%= image_tag(custom_item.fitting.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(custom_item.fitting.title, fitting_path(custom_item.fitting)) %>
            </td>
            <td>
              <%= custom_item.fitting.price %>
            </td>
            <td>
              <%= simple_form_for custom_item, url: custom_item_path(custom_item) do |f| %> <!-- 部件尺寸修改 -->
                <%= f.input :size  %>
                <%= f.submit "更新", data: {disable_with: "Submitting..."} %>
              <% end %>
            </td>
            <td>
              <%= render_custom_item_subtotal(custom_item) %> <!-- 部件价格小计 -->
            </td>
            <td>
              <%= link_to custom_item_path(custom_item), method: :delete do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
         <span>
          总计 <%= render_custom_total_price(current_custom) %> RMB
         </span>
      </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <%= link_to("生成方案", generate_custom_board_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
</div>
