<!--模仿刘传的注册页面开始-->
<div class="container-fluid signup">
  <div class="section section-full-screen section-signup" >
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="card card-signup">
            <div class="header header-info text-center ">
              <h4>注册</h4>
              <div class="social-line">
                <a href="#pablo" class="btn btn-simple btn-just-icon">
                  <i class="fa fa-weixin"></i>
                </a>
                <a href="#pablo" class="btn btn-simple btn-just-icon">
                  <i class="fa fa-weibo"></i>
                </a>
                <a href="#pablo" class="btn btn-simple btn-just-icon">
                  <i class="fa fa-github"></i>
                </a>
              </div>
            </div>
            <p class="text-divider">邮箱注册</p>
            <div class="content">
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="material-icons">email</i>
                  </span>
                  <div class="form-group label-floating">
                    <label class="control-label">E-mail</label>
                    <%= f.text_field :email, type: :email, required: true, autofocus: true, class: "form-control" %>
                  </div>
                </div>

                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="material-icons">lock_outline</i>
                  </span>
                  <div class="form-group label-floating">
                    <label class="control-label">登录密码</label>
                    <%= f.text_field :password, type: :password, required: true, class: "form-control" %>
                  </div>
                </div>

                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="material-icons">lock_outline</i>
                  </span>
                  <div class="form-group label-floating">
                    <label class="control-label">确认密码</label>
                    <%= f.text_field :password_confirmation, type: :password, required: true, class: "form-control" %>
                  </div>
                </div>

                <div class="footer text-center">
                  <%= f.submit "注册", data: { disable_with: "正在注册..." }, class: "btn btn-round btn-info" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--模仿刘传的注册页面结束-->
